<h1>Login</h1>

<%= form_tag(:controller => "sessions", :action => "create") do %>

	<div class="field">
		<%= label_tag :email %><br/>
		<%= text_field_tag :email %>
	</div>

	<div class="field">
		<%= label_tag :password %><br/>
		<%= text_field_tag :password %>
	</div>

	<div class="actions">
		<%= submit_tag :login %><br/>
	</div>
<% end %>