<h1>Listing pages</h1>

<table width="600" cellspacing="0" cellpadding="0" border="1">
  <tr>
    <th>ID</th>
    <th>URL</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.id %></td>
    <td><%= page.url %></td>
    <td><%= page.title %></td>
    <td><%= page.description %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

