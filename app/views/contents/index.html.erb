<h1>Listing contents</h1>

<table width="600" cellspacing="0" cellpadding="0" border="1">
  <tr>
    <th>ID</th>
    <th>Type</th>
    <th>Description</th>
    <th></th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td class="table_space"><%= content.id %></td>
    <td class="table_space"><%= content.content_type %></td>
    <td class="table_space"><%= content.description %></td>
    <td class="table_space"><%= link_to 'Show', content %> | <%= link_to 'Edit', edit_content_path(content) %> | <%= link_to 'Delete', content, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

